<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".IncomeTax">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#000000"
        app:title="Income Tax Calculator"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView4"
            android:layout_marginTop="179dp"
            android:text="Rate ot Return (%)"
            android:textColor="#4A148C"
            android:textSize="18sp"
            android:layout_alignLeft="@+id/textView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editText"
            android:layout_alignTop="@+id/textView6"
            android:text="10 years"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_alignLeft="@+id/editText" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="83dp"
            android:layout_marginTop="81dp"
            android:text=" SIP tenure :"
            android:textColor="#4A148C"
            android:textSize="18sp"
            android:layout_marginLeft="83dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_marginTop="29dp"
            android:text="Monthly SIP Amount"
            android:textColor="#4A148C"
            android:textSize="18sp"
            android:layout_alignRight="@+id/textView6" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="138dp"
            android:max="50"
            android:progress="10"
            android:progressBackgroundTint="#4A148C"
            android:progressTint="#4A148C"
            android:thumbTint="#000000"
            android:tickMarkTint="#000000" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"

            android:backgroundTint="#4A148C"
            android:ems="10"
            android:hint="8"
            android:inputType="numberSigned"
            android:textColor="#000000"
            android:textColorHint="@android:color/darker_gray" />


        <EditText
            android:id="@+id/editText2"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#4A148C"
            android:ems="10"
            android:hint="5000"
            android:inputType="numberSigned"
            android:textColor="#000000"
            android:textColorHint="@android:color/darker_gray"
            android:layout_alignParentRight="true"
            android:layout_marginRight="28dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="134dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="247dp"
            android:background="#4A148C"
            android:text="Calculate" />

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="245dp"
            android:background="@android:color/darker_gray" />
    </RelativeLayout>

</RelativeLayout>